			    <script>
		    	// Параметры метки
			    var placemarkConfig = {
			        'coordinates': [56.861080, 53.204348], // Координаты метки
			 
			        // Данные, которые будут использоваться при выводе балуна
			        'name': 'РИТ',
			        'desc': '',
			        'photo': 'ex4_1.png'
			    };
			    ymaps.ready(init);

			    function init() {
			        var myMap = new ymaps.Map('map', {
			                center: [56.861080, 53.204348],
			                zoom: 17,
			                scroll: false,
			                controls: []
			            });
			        myMap.behaviors.disable('scrollZoom');
			        // Создаем метку
			        var placemark = new ymaps.Placemark(placemarkConfig.coordinates, {
			            // всплывающая подсказка (выводим адрес объекта)
			            hintContent: placemarkConfig.name,
			            iconCaption: placemarkConfig.name,
			            // Содержимое балуна
			            balloonContent: '<strong>' + placemarkConfig.name + '</strong> <br/> ' + placemarkConfig.desc
			        });
			 
			        // Добавляем метку на карту
			        myMap.geoObjects.add(placemark, {
        preset: 'islands#darkOrangeDotIcon'
    });
			    }
			    </script>
